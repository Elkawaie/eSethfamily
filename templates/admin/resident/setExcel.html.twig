{% extends 'baseAdmin.html.twig' %}


{% block stylesheets %}
{{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/dropify.min.css') }}">
{% endblock %}

{% block body %}
                <div class="row clearfix">
                    <div class="col-lg-12 col-md-12">
                        <div class="card">
                            <div class="header">
                                <h2>Ajouter des r√©sidents</h2>
                                {{ form_start(form) }}
