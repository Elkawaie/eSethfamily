{% extends 'base.html.twig' %}

{% block title %}Resident index{% endblock %}

{% block body %}
    <h1>Resident index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>NumResident</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for resident in residents %}
            <tr>
                <td>{{ resident.id }}</td>
                <td>{{ resident.nom }}</td>
                <td>{{ resident.prenom }}</td>
                <td>{{ resident.numResident }}</td>
                <td>
                    <a href="{{ path('resident_show', {'id': resident.id}) }}">show</a>
                    <a href="{{ path('resident_edit', {'id': resident.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('resident_new') }}">Create new</a>
{% endblock %}
