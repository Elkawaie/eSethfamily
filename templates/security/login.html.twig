{% extends 'baseLogin.html.twig' %}

{% block title %}Eseth Familly{% endblock %}

{% block body %}
    <body class="theme-cyan">
    <!-- WRAPPER -->
    <div id="wrapper" class="hiddenWrapper">
        <div class="gridLogin">
            <div class="gridBgColor">
                <div class="auth-box">
                    <div class="top">
                        <img src="{{ asset('images/Logo-eSeth-Family-Fond-Blanc.png') }}" alt="Logo eseath Familly">
                    </div>
                    <div class="card">
                        <div class="header">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success">
                                    {{ message }}
                                </div>
                            {% endfor %}
                            <p class="lead">Se connecter</p>
                        </div>
                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.username }}, <a
                                        href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% else %}
                            <div class="body">
                                <form class="form-auth-small" method="post">
                                    <div class="form-group">
                                        <label for="signin-email" class="control-label sr-only">Email</label>
                                        <input type="email" name="email" class="form-control"
                                               id="inputEmail signin-email" value="{{ last_username }}" required
                                               autofocus placeholder="Email">
                                    </div>
                                    <div class="form-group">
                                        <label for="signin-password" class="control-label sr-only">Password</label>
                                        <input type="password" name="password" class="form-control"
                                               id="inputPassword signin-password" required value="thisisthepassword"
                                               placeholder="Password">
                                    </div>
                                    <div class="form-group clearfix">
                                        <label class="fancy-checkbox element-left">
                                            <input type="checkbox" name="_remember_me">
                                            <span>Se souvenir de moi</span>
                                        </label>
                                    </div>
                                    <input type="hidden" name="_csrf_token"
                                           value="{{ csrf_token('authenticate') }}"
                                    >
                                    <button type="submit" class="btn btn-primary btn-lg btn-block">LOGIN</button>
                                    <div class="bottom">
                                        {#                                    <span class="helper-text m-b-10"><i class="fa fa-lock"></i> <a href="page-forgot-password.html">Forgot password?</a></span>#}
                                        <span>Vous n'avez pas de compte ? <a href="{{ path('app_register') }}">S'inscrire</a></span>
                                    </div>
                                </form>
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="row flex-column links">
                    <a class="text-white text-center" href="eSethFamily">eSethFamily</a>
                    <a class="text-white text-center" href="">Nous Contacter</a>
                    <a class="text-white text-center" href="">Mentions légales</a>
                    <a class="text-white text-center" href="">Données personnelles</a>
                </div>
            </div>
            <div class="backgroundImg">
                <img src="{{ asset('images/fond_login.png') }}" alt="">
            </div>
        </div>
    </div>
    <!-- END WRAPPER -->
    </body>

{% endblock %}
