{% extends 'baseLogin.html.twig' %}

{% block title %}Eseth Family!{% endblock %}

{% block body %}
    <body class="theme-cyan">
    <!-- WRAPPER -->
    <div id="wrapper" class="hiddenWrapper">
        <div class="gridLogin">
            <div class="gridBgColor">
                <div class="auth-box register-box">
                    <div class="top">
                        <img src="{{ asset('images/Logo-eSeth-Family-Fond-Blanc.png') }}" alt="Lucid">
                    </div>
                    <div class="card">
                        <div class="header d-flex justify-content-center">
                            <h3 class="lead">S'inscrire</h3>
                        </div>
                        <div class="body">
                            {{ form_start(form) }}
                            <div class="form-row justify-content-between">
                                <div class="form-group col-md-6">
                                    {{ form_label(form.email) }}
                                    {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
                                </div>
                                <div class="form-group col-md-6">
                                    {{ form_label(form.password) }}
                                    {{ form_widget(form.password,{'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-row justify-content-between">
                                <div class="form-group col-md-6">
                                    {{ form_label(form.nom) }}
                                    {{ form_widget(form.nom,{'attr':{'class':'form-control'}}) }}
                                </div>
                                <div class="form-group col-md-6">
                                    {{ form_label(form.prenom) }}
                                    {{ form_widget(form.prenom,{'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>

                            <div class="form-group">
                                {{ form_label(form.ehpad) }}
                                {{ form_widget(form.ehpad,{'attr':{'class':'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.commentaire) }}
                                {{ form_widget(form.commentaire,{'attr':{'class':'form-control'}}) }}
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg btn-block">S'inscrire</button>

                            {{ form_end(form) }}
                            <div class="bottom mt-4">
                                <span><a href="{{ path('app_login') }}">Se connecter</a></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row flex-column links">
                    <a class="text-white text-center" href="eSethFamily">eSethFamily</a>
                    <a class="text-white text-center" href="">Nous Contacter</a>
                    <a  class="text-white text-center" href="">Mentions légales</a>
                    <a class="text-white text-center" href="">Données personnelles</a>
                </div>
            </div>
            <div class="backgroundImg">
                <img src="{{ asset('images/fond_login.png') }}" alt="">
            </div>
        </div>
    </div>
    <!-- END WRAPPER -->
    </body>

{% endblock %}
